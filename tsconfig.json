{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "alwaysStrict": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ]
}